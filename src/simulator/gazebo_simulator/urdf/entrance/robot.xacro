    <!-- <xacro:robosense_airy name="robosense_airy_lr" parent_link="base_link" frame_id="base_link" xyz="3.0 -2.1 0.01" rpy="0 0 1.5707963"/> -->
    <!-- <xacro:robosense_airy name="robosense_airy_rf" parent_link="base_link" frame_id="base_link" xyz="-3.0 2.1 0.01" rpy="0 0 -1.5707963"/> -->
    <!-- <xacro:robosense_airy name="robosense_airy_rr" parent_link="base_link" frame_id="base_link" xyz="3.0 2.1 0.01" rpy="0 0 3.1415926"/> -->
    <!-- 底部对角 + 顶部对角 -->
    <xacro:robosense_airy name="robosense_airy_lm" parent_link="base_link" frame_id="base_link" xyz="0.0 -2.10 0.01" rpy="0 0 0"/>
    <xacro:robosense_airy name="robosense_airy_rm" parent_link="base_link" frame_id="base_link" xyz="0.0 2.10 0.01" rpy="0 0 3.1415926"/>
